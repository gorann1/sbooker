<div id="<%= dom_id zone %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= zone.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Desc:</strong>
    <%= zone.desc %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= zone.slug %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this zone", zone, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this zone', edit_zone_path(zone), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
